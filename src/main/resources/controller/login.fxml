<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
          AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <Label text="Inicio de Sesión"/>
        <TextField fx:id="txtEmail" promptText="Correo electrónico"/>
        <PasswordField fx:id="txtPassword" promptText="Contraseña"/>
        <Button onAction="#logIn" text="Iniciar Sesión"/>
        <Pane prefHeight="46.0" prefWidth="259.0">
            <children>
                <Label layoutX="29.0" layoutY="16.0" text="¿No tienes cuenta?">
                    <font>
                        <Font size="10.0"/>
                    </font>
                </Label>
                <Button fx:id="goLoginButton" layoutX="141.0" layoutY="14.0" mnemonicParsing="false"
                        onAction="#goToRegister" prefHeight="21.0" prefWidth="85.0" text="Registrarse"
                        textAlignment="CENTER">
                    <font>
                        <Font size="10.0"/>
                    </font>
                </Button>
            </children>
        </Pane>
    </VBox>
</AnchorPane>
